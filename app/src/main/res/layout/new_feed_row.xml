<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:weightSum="4"

    android:id="@+id/newFeedLayout">


    <ImageView
        android:background="@color/darkOrange"
        android:id="@+id/GIFView"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY" />

    <TextView
        android:text="In the quest"
        android:layout_width="150dp"
        android:layout_height="148dp"
        android:id="@+id/titleTextView"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/GIFView"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="4dp"
        app:layout_constraintRight_toLeftOf="@+id/imageView5"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp" />


    <ImageView
        android:background="@android:color/holo_green_dark"
        android:id="@+id/imageView1"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/GIFView"
        android:layout_height="98dp"
        android:layout_width="98dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitXY" />

    <ImageView
        android:background="@android:color/holo_blue_dark"

        android:id="@+id/imageView2"
        android:scaleType="fitXY"


        android:layout_height="98dp"
        android:layout_width="98dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView1"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="4dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:background="@android:color/darker_gray"

        android:id="@+id/imageView5"
        android:scaleType="fitXY"


        android:layout_width="98dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:layout_height="98dp"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toRightOf="@+id/GIFView"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp" />

    <ImageView
        android:background="@color/darkOrange"

        android:id="@+id/imageDotDotDot"
        android:scaleType="fitXY"


        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="4dp"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView5"
        android:layout_marginLeft="4dp"
        android:layout_width="98dp"
        android:layout_height="98dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="4dp" />

    <ImageView
        android:background="?attr/colorAccent"

        android:id="@+id/imageView4"
        android:scaleType="fitXY"


        android:layout_width="98dp"
        android:layout_height="98dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintLeft_toRightOf="@+id/imageView3"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="4dp" />

    <ImageView
        android:background="@android:color/holo_red_light"

        android:id="@+id/imageView3"
        android:scaleType="fitXY"


        android:layout_height="98dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView1"
        android:layout_width="98dp"
        app:layout_constraintLeft_toRightOf="@+id/GIFView"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp" />


    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"

        tools:layout_editor_absoluteX="280dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />


    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"

        app:layout_constraintRight_toLeftOf="@+id/button3"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />


    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"

        app:layout_constraintRight_toLeftOf="@+id/button5"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />



</android.support.constraint.ConstraintLayout>